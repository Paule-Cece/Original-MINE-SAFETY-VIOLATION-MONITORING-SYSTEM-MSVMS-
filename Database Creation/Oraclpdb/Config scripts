-- MSVMS Database Creation System

-- Create Tablespaces
CREATE TABLESPACE MSVMS_DATA
  DATAFILE 'MSVMS_DATA01.dbf' SIZE 100M
  AUTOEXTEND ON NEXT 50M MAXSIZE UNLIMITED;

CREATE TABLESPACE MSVMS_INDEX
  DATAFILE 'MSVMS_INDEX01.dbf' SIZE 50M
  AUTOEXTEND ON NEXT 25M MAXSIZE UNLIMITED;

CREATE TEMPORARY TABLESPACE MSVMS_TEMP
  TEMPFILE 'MSVMS_TEMP01.dbf' SIZE 20M
  AUTOEXTEND ON NEXT 10M MAXSIZE UNLIMITED;

-- Create Admin User
CREATE USER admin_msvms IDENTIFIED BY [Paule]
  DEFAULT TABLESPACE MSVMS_DATA
  TEMPORARY TABLESPACE MSVMS_TEMP;

-- Grant Privileges
GRANT CONNECT, RESOURCE, DBA TO admin_msvms;

-- Enable Archive Logging
ALTER DATABASE ARCHIVELOG;

-- Memory Parameters (Optional tuning example)
ALTER SYSTEM SET SGA_TARGET=500M SCOPE=SPFILE;
ALTER SYSTEM SET PGA_AGGREGATE_TARGET=200M SCOPE=SPFILE;

-- Connect as Admin
CONNECT admin_msvms/[Paule];





 
